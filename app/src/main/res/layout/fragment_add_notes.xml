<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1EAF1">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1EAF1"
        android:orientation="horizontal"
        tools:context=".ui.todolist.AddNotes">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="#5DA2D5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/whitelogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/backgrounds"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="Title"
                    android:textColor="#000"
                    android:textSize="19sp"
                    app:fontFamily="sans-serif-smallcaps" />

                <EditText
                    android:id="@+id/atitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/inputsel"
                    android:hint="Give a heading"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textColor="#5DA2D5"
                    android:textColorHint="#b5b5b5"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="Description"
                    android:textColor="#000"
                    android:textSize="19sp"
                    app:fontFamily="sans-serif-smallcaps" />

                <EditText
                    android:id="@+id/adescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/inputsel"
                    android:hint="More Information"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textColor="#5DA2D5"
                    android:textColorHint="#b5b5b5"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="Target"
                    android:textColor="#000"
                    android:textSize="19sp"
                    app:fontFamily="sans-serif-smallcaps" />

                <EditText
                    android:id="@+id/datedone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/inputsel"
                    android:hint="When will you complete this?"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textColor="#5DA2D5"
                    android:textColorHint="#b5b5b5"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/createNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/round"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="7dp"
            android:text="CREATE NEW"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="590dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/round"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="7dp"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </FrameLayout>
</ScrollView>